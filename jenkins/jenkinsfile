pipeline{
    agent any
    stages{ 
         stage('BUILD'){
                steps{

                  sh '''
                  #!/bin/bash
                  pwd
                  ls
                  echo "this is BUILD stage"
                  sleep 5
                  exit 1
                  '''
                }
          }
         stage('DEPLOY'){
               echo "this is DEPLOY stage"
               sh 'sleep 5'
          }
    }

}
                   
             
        
          

            
        
      
    
