pipeline{
    agent none
    environment{
      BRANCH='main'
      GIT_REPO='https://github.com/JayanthCS/jenkins.git'
    }
    stages{
      stage('TESTING'){
        parallel{
        stage('BUILD'){
          agent any
             steps{
              git branch: env.BRANCH, url: env.GIT_REPO
               sh '''
                 #!/bin/bash
                 pwd
                 ls
                 echo "this is BUILD stage"
                 sleep 5
               '''
             }
        }
         stage('DEPLOY'){
          agent {label 'slave1'}
            steps{
                echo "this is DEPLOY stage"
                sh 'sleep 5'
             }
        }
          

            stage('TESTING1'){
              agent{label 'label1'}
             steps{
               echo "echo this is TESTING1 stage"
               sh 'sleep 5'
              }
            }
          stage('TESTING2'){
           agent{label 'slave1'}
            steps{
                sh '''
                echo "this is TESTING2 stage"
                sleep 5
                '''
              }
          } 
        }
      }
    }
}